<LinearLayout android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main4"
    android:background="@drawable/background_intro"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"

        android:layout_height="200dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="50dp"
            android:elevation="20dp"
            android:layout_height="60dp">
        <TextView
            android:paddingLeft="20dp"
            android:drawableStart="@drawable/ic_baseline_person_search_24"
           android:gravity="center"
            android:hint="Search Here Customer Name..."
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/sv_customer"
            android:onClick="searchcustomer"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:drawableStart="@drawable/admin"
                android:gravity="center"
                android:hint="Add Customer Here"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Add Customer"
                android:padding="30dp"
                android:layout_marginTop="100dp"
                android:background="@color/white"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_height="400dp">
        <LinearLayout
            android:paddingTop="40dp"
            android:layout_width="match_parent"

            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_height="0dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp"
                    android:layout_height="150dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/iv_print"
                        android:onClick="print_invoice"
                        android:background="@drawable/invoice"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Print Invoice"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="50dp"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp"
                    android:layout_height="150dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:id="@+id/iv_1"
                        android:layout_height="60dp"
                        android:onClick="Term_condition"
                        android:background="@drawable/term"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_marginTop="50dp"
                        android:text="Term and Conditions"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
             android:paddingBottom="40dp"
            android:layout_width="match_parent"

            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="20dp"
                    android:layout_height="150dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/iv_3"
                        android:onClick="enquiary"
                        android:background="@drawable/query"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enquary"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="20dp"
                    android:layout_height="150dp">
                    <ImageView
                        android:id="@+id/iv_2"
                        android:layout_gravity="center"
                        android:layout_width="60dp"
                        android:onClick="admin"
                        android:background="@drawable/admin"
                        android:layout_height="60dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:layout_marginTop="50dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>