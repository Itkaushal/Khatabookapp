<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
   tools:context=".profile"
    android:background="@drawable/background_intro"
    android:orientation="vertical"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
<ImageView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:id="@+id/profile"
    android:background="@drawable/ic_baseline_person_search_24"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:layout_gravity="center"
        android:textSize="30dp"
       android:textStyle="bold"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="75dp"
        android:text="Add Customer"
        android:id="@+id/pro_mycustomer"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <Button
        android:id="@+id/pro_updateProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="updateprofile"
        android:text="Update Profile"
        android:textStyle="bold"
        android:textSize="20dp"
       android:layout_marginHorizontal="75dp"
        android:layout_marginTop="10dp"
        android:gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:onClick="changepassword"
        android:id="@+id/pro_changepassword"
        android:textStyle="bold"
        android:textSize="20dp"
       android:layout_marginHorizontal="75dp"
        android:layout_marginTop="10dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/pro_myprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:onClick="myprofile"
        android:textStyle="bold"
      android:layout_marginHorizontal="75dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/pro_contactus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="contact us @"
        android:textStyle="bold"
        android:textSize="10dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile- +91 9953857495"
        android:layout_gravity="center"
        android:textSize="10dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email- kaushalprajapti9953@gmail.com"
        android:layout_gravity="center"
        android:textSize="10dp"
        android:textStyle="bold"
        />


</LinearLayout>